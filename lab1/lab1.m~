close all;
clear;

%Resolution:
Xr = 320;
Yr = 240;
%VeScans_per_frame:
VS = 12;
%Frames:
F_N = 60;

for i = 1 :(F_N)
    m = i - 31;
    theta = 0:0.01:2*pi;
    rho = sin(5*theta + m*pi/10);
    
    [x,y] = pol2cart(theta, rho);
    f = figure('visible', 'off', 'Position', [0 0 Xr Yr]);
    plot(x,y)
    xlim([-1 1])
    ylim([-1 1])
    
    F(i) = getframe;
end

%implay(F)

A = F;
line_h = Yr/VS;

for i = 1 : F_N
    for vl = 1:VS
        begin =  1 + line_h * (vl-1);
    en
        A(i).cdata(:,: line_h * vl ,:) = F(1+mod(i*vl, F_N)).cdata(:,:,:);
    end
end

implay(A)